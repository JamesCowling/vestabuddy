    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.12.7",
    "@types/node-fetch": "^2.6.11",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@types/sha256": "^0.2.2",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "convex-test": "^0.0.10",
    "npm-run-all": "^4.1.5",
